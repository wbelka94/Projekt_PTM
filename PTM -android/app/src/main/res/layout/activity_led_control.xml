<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.led.led.ledControl">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="/\\"
        android:id="@+id/up"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/seekBar"
        android:layout_alignLeft="@+id/STOP"
        android:layout_alignStart="@+id/STOP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView3"
        android:layout_below="@+id/down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/man"
        android:layout_alignEnd="@+id/man" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/button4"
        android:layout_gravity="left|bottom"
        android:layout_alignTop="@+id/man"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="\\/"
        android:id="@+id/down"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/STOP"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="/\\"
        android:id="@+id/STOP"
        android:layout_gravity="center"
        android:layout_below="@+id/up"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="&lt;"
        android:id="@+id/left"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/up"
        android:layout_toLeftOf="@+id/up"
        android:layout_toStartOf="@+id/up" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=">"
        android:id="@+id/right"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/up"
        android:layout_toRightOf="@+id/up"
        android:layout_toEndOf="@+id/up" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANUAL"
        android:id="@+id/man"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
